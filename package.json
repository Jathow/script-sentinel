{
  "name": "script-manager",
  "version": "0.1.0",
  "description": "Script Sentinel â€“ desktop script manager with start/stop, monitoring, logs, auto-restart, and Windows installer.",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.mjs",
  "author": "Justin",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "vite build && electron-builder -w",
    "lint": "eslint . --ext .ts,.tsx,.cjs,.cts,.mts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "release": "standard-version",
    "test:e2e": "playwright test",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "@playwright/test": "^1.45.0",
    "vitest": "^1.6.0",
    "@types/node": "^20.11.30",
    "@types/pidusage": "^2.0.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "playwright": "^1.45.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "pidusage": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.jathow.scriptsentinel",
    "productName": "Script Sentinel",
    "files": [
      "dist/**",
      {
        "from": "dist-electron/",
        "to": "dist-electron/",
        "filter": ["**/*"]
      },
      "index.html",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Jathow",
        "repo": "script-sentinel"
      }
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  }
}
